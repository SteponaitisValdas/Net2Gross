@model IdentitySample.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}


<div class="content-admin-big">
    <div class="content-corner-login"></div>
    <div class="content-panel-name">
        <h2>Register with @ViewBag.LoginProvider</h2>
    </div>
    <div class="edit-form">
        @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <h4>Association Form</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>
                You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.<br/>
                Please enter your email, name and surname. <br/> Photo is optional.
            </p>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmployeeName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmployeeSurname, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.EmployeeSurname, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmployeePhoto, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <input class="form-control" id="uploadFile" placeholder="Choose File" disabled="disabled" />
                    <div class="fileUpload btn btn-default btn-sm">
                        <span>Choose photo</span>
                        <input class="upload" type="file" name="EmployeePhoto" id="uploadBtn" accept=".png,.jpg,.jpeg,.gif,.tif" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>
            </div>
        }
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
